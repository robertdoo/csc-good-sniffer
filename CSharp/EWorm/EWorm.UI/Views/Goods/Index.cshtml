@{
    ViewBag.Title = "聚焦搜索引擎 - Eworm";
}

<html>
<head>
    <title>EWORM</title>
    <link href="@Url.Content("~/Content/Layout.css")" rel="Stylesheet" type="text/css" />
</head>
<body>
    <div id="main">
        <div id="top">
            <div id="big-title">
                EWORM
            </div>
        </div>
        <div id="search-bar">
            <div class="search-form">
                @using (Html.BeginForm("Search", "Home"))
                {
                    @Html.TextBox("keyword", "", new { style = "width:444px;", maxlength = "100" })
                    <input type="submit" value="搜索" />
                }
            </div>
        </div>
        <div id="bottom">
            <div class="explain">
                找到你想要的商品信息
            </div>
        </div>
    </div>
</body>
</html>
